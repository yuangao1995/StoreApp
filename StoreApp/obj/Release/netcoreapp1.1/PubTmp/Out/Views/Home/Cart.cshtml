@{
    ViewData["Title"] = "Contact";
    ViewBag.Title = "Shopping Cart";
}
@section Scripts {
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/lib/angular-route/angular-route.min.js"></script>
    <script src="~/js/app-cart.js"></script>
    <script src="~/js/cartItemsController.js"></script>
}
<div>
    <h2>@ViewData["Title"]</h2>
    <h3>@ViewData["Message"]</h3>
</div>

<div class="row" >
    <div ng-app="app-cart" ng-controller="cartItemsController as vm">
        <table id="Cart" class="table table-responsive table-striped">
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th></th>
            </tr>
            @foreach (var i in Model)
            {
                <tr id="AddedItems">
                    <td>@i.Name</td>
                    <td>$@i.CPrice</td>
                    <td><a class="btn btn-success" ng-click="vm.delete('@i.CartItemId')">Remove From Cart</a></td>
                </tr>
            }
            
        </table>

</div>
    <div>
        <form>
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" />
                <span class="text-muted"></span>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" />
                <span class="text-muted"></span>
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input class="form-control"></>
                <span class="text-muted"></span>
            </div>
            <div class="form-group">
                <label>Address</label>
                <input class="form-control"></>
                <span class="text-muted"></span>
            </div>
            <div class="form-group">
                <label>Card Number</label>
                <input class="form-control"></>
                <span class="text-muted"></span>
            </div>
            <div class="form-group">
                <label>CVV Number</label>
                <input class="form-control"></>
                <span class="text-muted"></span>
            </div>
            <div class="form-group">
                <a asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
                <input type="submit" value="Pay" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
