@{
    ViewData["Title"] = "Contact";
    ViewBag.Title = "Shopping Cart";
}
@section Scripts {
}
<div>
    <h2>@ViewData["Title"]</h2>
    <h3>@ViewData["Message"]</h3>
</div>

<div class="row" >
    <div ng-controller="cartItemsController as vm">
        <table id="Cart" class="table table-responsive table-striped">
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th></th>
            </tr>
            <tr id="AddedItems">
                <td></td>
                <td>$</td>
                <td><a id="RemoveC" class="btn btn-success">Remove From Cart</a></td>
            </tr>
        </table>
        <table class="table table-responsive table-striped">
            <tr>
                <th>Total Price</th>
                <td></td>
                <td></td>
                <td>0</td>
            </tr>
        </table>
    </div>
    <div>
        <form>
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" />
                <span class="text-muted"></span>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" />
                <span class="text-muted"></span>
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input class="form-control"></>
                <span class="text-muted"></span>
            </div>
            <div class="form-group">
                <label>Address</label>
                <input class="form-control"></>
                <span class="text-muted"></span>
            </div>
            <div class="form-group">
                <label>Card Number</label>
                <input class="form-control"></>
                <span class="text-muted"></span>
            </div>
            <div class="form-group">
                <label>CVV Number</label>
                <input class="form-control"></>
                <span class="text-muted"></span>
            </div>
            <div class="form-group">
                <a asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
                <input type="submit" value="Pay" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
